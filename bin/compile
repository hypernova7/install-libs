#!/usr/bin/env bash

file="$1/.env"
BIN_DIR=$(cd $(dirname $0); pwd)
profile="$1/.profile.d/profile"

source $BIN_DIR/redis

if [ -z "$SOURCE_VERSION" ]; then
  echo "Not found SOURCE_VERSION"
  exit 0
fi
echo "\n" > $profile
echo $(cat $BIN_DIR/redis) >> $profile
echo "export BUILD_DIR=$1" >> $profile
echo "export RELEASE=$SOURCE_VERSION" >> $profile
echo "export SOURCE_VERSION=$SOURCE_VERSION" >> $profile
