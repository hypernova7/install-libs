#!/usr/bin/env bash

file="$1/.env"
BIN_DIR=$(cd $(dirname $0); pwd)
profile="$1/.profile.d/profile"
sysctl_conf="$1/../etc/sysctl.conf"

source $BIN_DIR/redis

if [ -z "$SOURCE_VERSION" ]; then
  echo "Not found SOURCE_VERSION"
  exit 0
fi
cat $BIN_DIR/redis > $profile
echo "BUILD_DIR=$1" >> $file
echo "RELEASE=$SOURCE_VERSION" >> $file
echo "SOURCE_VERSION=$SOURCE_VERSION" >> $file
cd ../etc && ls -a
// echo vm.overcommit_memory=1 >> $sysctl_conf
