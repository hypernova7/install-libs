#!/usr/bin/env node

const { env } = process
const { exec } = require('child_process')
const write = (val) => {
  return exec(val, (error, stdout, stderr) => {
    if (error) {
      console.log(`error: ${error.message}`);
      return;
    }
    if (stderr) {
      console.log(`stderr: ${stderr}`);
      return;
    }
    console.log(`stdout: ${stdout}`);
  })
}
write(`
  ${env.SOURCE_VERSION}
  if [ -z "$SOURCE_VERSION" ]; then
    echo "Not found SOURCE_VERSION"
    exit 0
  fi

  echo "RELEASE=$SOURCE_VERSION" >> $1/.env
  echo "SOURCE_VERSION=$SOURCE_VERSION" >> $1/.env
`)
