#!/usr/bin/env node

const { exec } = require('child_process')
const log = (...args) => console.log(...args)
const write = (val) => {
  return exec(val, (error, stdout, stderr) => {
    if (error) {
      log(`error: ${error.message}`);
      return;
    }
    if (stderr) {
      log(`stderr: ${stderr}`);
      return;
    }
    log(`stdout: ${stdout}`);
  })
}
write('npm i -g shelljs')
const sh = require('shelljs')
sh.exec(`
  echo "$2"
`)
